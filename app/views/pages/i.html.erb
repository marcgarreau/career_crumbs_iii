<div class="container">
  <div class="profile-container">
    <h3>Welcome, <%= @user.first_name %></h3>
    <%= @user.first_name %>
    <%= @user.last_name %>
    <br/>
    <%= @user.headline %>
    <br/>
    <strong>Industry:</strong> <%= @user.industry %>
    <br/>
    <%= image_tag @user.pic_url %>
    <br/>
  </div>
  <div class="suggested-job-head">Positions you may be interested in:</div>

  <% if @user.jobs.any? %>
    <% @user.jobs.each do |job| %>
      <div class="job-box">
        <span class="suggested-job-title"><%= job.title %></span><br/>
        <span class="suggested-job-company"><%= job.company %></span>
        <span class="suggested-job-loc">(<%= job.location %>)</span><br/>
        <span class="suggested-job-desc"><%= job.description %>...</span><br/><br/>
        <%= link_to "View on LinkedIn", 'https://www.linkedin.com/jobs2/view/' + job.linkedin_id.to_s, class: "btn btn-default" %><br/>
      </div>
    <% end %>
  <% end %>
</div>

